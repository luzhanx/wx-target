.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding: 0 40rpx;
}

.login .loginImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 80rpx 0;
}

.login .Logincontent {
  width: 100%;
  text-align: left;
  padding: 60rpx 0;
  border-top: 2rpx solid #f7f7f7;
}

.login .Logincontent .title {
  font-size: 36rpx;
  margin-bottom: 30rpx;
}

.login .Logincontent .text {
  color: #666;
  line-height: 40rpx;
  font-size: 32rpx;
}

.login .getUserInfoBtn {
  width: 100%;
  height: 90rpx;
  border-radius: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background: #369;
  font-size: 32rpx;
  margin-top: 20rpx;
}
