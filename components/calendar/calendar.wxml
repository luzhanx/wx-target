                  <text class="calendar-lunar-day" style="color: {{day.color}};" wx:else>{{day.lunarDay}}</text>
                </block>
              </block>
            </view>
            <view class="calendar-cell cell-rounded" style="background: {{day.background}}; width: {{cellSize}}rpx; height: {{cellSize}}rpx;border:{{ day.border }}" wx:else bindtap="dayClick" data-day="{{day}}">
