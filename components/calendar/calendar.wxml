                  <text class="calendar-lunar-day" style="color: {{day.color}};" wx:else>{{day.lunarDay}}</text>
                </block>
              </block>
              <block wx:elif="{{day.info == 'next'}}">
                <text class="calendar-day" style="color: {{day.color}};">{{day.day}}</text>
                <block wx:if="{{addon == 'lunar'}}">
