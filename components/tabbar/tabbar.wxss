/* 底部导航 */

.tabbar {
  width: 100%;
  display: flex;
  height: 100rpx;
  background: #fff;
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  font-size: 20rpx;
  color: #b7b7b7;
}

.tabbar .link {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.tabbar .link:active {
  background: #eee;
}

.tabbar .link .center {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 0;
  position: relative;
}
.tabbar .link .center .btn{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  border: 1px solid #ccc;
  bottom: 0;
  left: -36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 4rpx;
}
.tabbar .link .center .btn image{
  width: 54rpx;
  height: 70rpx;
}

.tabbar .link image {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 0;
}

.tabbar .link.active {
  color: #000;
}

.tabbar .link .tip{
  position: absolute;
  min-width: 30rpx;
  height: 30rpx;
  top: -7rpx;
  /* right: 70rpx; */
  left: 134rpx;
  padding: 1rpx 10rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 20rpx;
  background: #f01414;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,.4);
}
